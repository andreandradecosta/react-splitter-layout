{
  "name": "@andrecosta/react-splitter-layout",
  "version": "1.0.0",
  "description": "A simple split layout for React and modern browsers",
  "keywords": [
    "react",
    "layout",
    "split",
    "splitter"
  ],
  "author": "Yang Liu <hi@zesik.com>",
  "contributors": [
    "Andre Costa <andre.andrade.costa@gmail.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreandradecosta/react-splitter-layout"
  },
  "bugs": {
    "url": "https://github.com/andreandradecosta/react-splitter-layout/issues"
  },
  "main": "lib/index.js",
  "files": [
    "lib/*"
  ],
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-istanbul": "^4.1.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.24.1",
    "coveralls": "^2.13.1",
    "css-loader": "^0.28.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "expect": "^1.20.2",
    "gh-pages": "^0.12.0",
    "ignore-styles": "^5.0.1",
    "jsdomify": "^3.1.0",
    "mocha": "^3.3.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^10.3.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-router": "^3.0.5",
    "react-test-renderer": "^15.5.4",
    "style-loader": "^0.17.0",
    "webpack": "^2.4.1"
  },
  "dependencies": {
    "prop-types": "^15.5.10"
  },
  "peerDependencies": {
    "react": "^15.5.4"
  },
  "scripts": {
    "prepublish": "webpack --progress -p",
    "build": "webpack --progress",
    "build-example": "cd example && webpack --progress",
    "lint": "eslint --ext .js,.jsx src/ example/javascripts/",
    "test": "mocha --require babel-register --require ignore-styles test/*.spec.js*",
    "coverage": "nyc --extension .jsx npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true
    },
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "func-names": [
        "off"
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "tabWidth": 2,
          "ignoreUrls": true
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-multiple-empty-lines": [
        "warn",
        {
          "max": 1
        }
      ],
      "no-param-reassign": [
        "off"
      ],
      "no-plusplus": [
        "off"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-underscore-dangle": [
        "off"
      ],
      "prefer-arrow-callback": [
        "off"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "react/prefer-stateless-function": [
        "warn"
      ],
      "react/no-did-mount-set-state": [
        "off"
      ]
    }
  }
}
